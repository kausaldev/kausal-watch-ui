{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "curly": ["off"],
    "object-curly-newline": ["off"],
    "react/prop-types": [2],
    "react/jsx-props-no-spreading": ["off"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-unused-vars": ["warn"],
    "import/extensions": [
      "warn",
      {
        ".js": "never",
        ".mjs": "never",
        ".jsx": "never",
        ".ts": "never",
        ".tsx": "never"
      }
    ]
  }
}
