{
  "parser": "@babel/eslint-parser",
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["."],
        "extensions": [".js", ".jsx", ".jsm", ".mjs", ".tsx", ".ts"]
      }
    }
  },
  "ignorePatterns": ["node_modules/**"],
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "curly": ["off"],
    "object-curly-newline": ["off"],
    "react/prop-types": [2],
    "react/jsx-props-no-spreading": ["off"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/extensions": [
      "warn", {
        ".js": "never",
        ".mjs": "never",
        ".jsx": "never",
        ".ts": "never",
        ".tsx": "never",
      }
    ],
  },
  "extends": [
    "eslint:recommended", "plugin:react/recommended", "airbnb", "plugin:react/jsx-runtime"
  ]
}
